{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Debug From Makefile",
            "command": "make",
            "args": [
                "mdriver"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Makefile을 사용한 디버그"
        }
    ],
    "version": "2.0.0"
}

